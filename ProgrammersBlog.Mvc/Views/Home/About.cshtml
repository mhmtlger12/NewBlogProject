                            <div class="stat-item">
                                <div class="stat-number">@Model.Stats.Items[2].Number</div>
                                <div class="stat-label">@Model.Stats.Items[2].Label</div>
                            </div>
                        }
                        @if (Model.Stats.Items.Length > 3)
