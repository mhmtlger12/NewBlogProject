@model ProgrammersBlog.Entities.Concrete.AboutUsPageInfo
@{
    Layout = "_AboutLayout";
    ViewBag.Title = Model.Header;
    ViewBag.Description = Model.SeoDescription;
    ViewBag.Tags = Model.SeoTags;
    ViewBag.Author = Model.SeoAuthor;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700;800&display=swap" rel="stylesheet">

<div class="about-us-hero">
    <div class="about-hero-overlay">
        <div class="container">
            <h1 class="display-4 text-white font-weight-bold">@Model.Header</h1>
            <p class="hero-subtitle text-center mx-auto">@Model.HeroSubtitle</p>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent">
                    <li class="breadcrumb-item"><a href="/" class="text-white">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active text-white" aria-current="page">Hakkımızda</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="wave-container">
        <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="shape-fill"></path>
        </svg>
    </div>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="about-content-card">
                <div class="about-logo text-center mb-4">
                    <div class="logo-container">
                        <div class="logo-sembol"></div>
                        <div class="logo-yazi">
                            <h2 class="logo-baslik">MUĞLA</h2>
                            <div class="logo-slogan">Ege'nin Kalbinde Bir Cennet</div>
                        </div>
                    </div>
                </div>

                <h2 class="section-title">@Model.Header</h2>

                <div class="about-text">
                    <p>@Model.Content</p>
                    @if (!string.IsNullOrEmpty(Model.AboutTextParagraph1))
                    {
                        <p>@Model.AboutTextParagraph1</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.AboutTextParagraph2))
                    {
                        <p>@Model.AboutTextParagraph2</p>
                    }
                </div>

                @if (Model.Values != null && Model.Values.Length > 0)
                {
                    <div class="about-values mt-5">
                        <h3 class="mb-4">@Model.ValuesTitle</h3>
                        <div class="row">
                            @if (Model.Values.Length > 0)
                            {
                                <div class="col-md-4 mb-4">
                                    <div class="value-card">
                                        <div class="value-icon">
                                            <i class="@Model.Values[0].Icon"></i>
                                        </div>
                                        <h4>@Model.Values[0].Title</h4>
                                        <p>@Model.Values[0].Description</p>
                                    </div>
                                </div>
                            }
                            @if (Model.Values.Length > 1)
                            {
                                <div class="col-md-4 mb-4">
                                    <div class="value-card">
                                        <div class="value-icon">
                                            <i class="@Model.Values[1].Icon"></i>
                                        </div>
                                        <h4>@Model.Values[1].Title</h4>
                                        <p>@Model.Values[1].Description</p>
                                    </div>
                                </div>
                            }
                            @if (Model.Values.Length > 2)
                            {
                                <div class="col-md-4 mb-4">
                                    <div class="value-card">
                                        <div class="value-icon">
                                            <i class="@Model.Values[2].Icon"></i>
                                        </div>
                                        <h4>@Model.Values[2].Title</h4>
                                        <p>@Model.Values[2].Description</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <div class="text-center mt-4">
                    <a href="/mugla-gezilecek-yerler" class="discover-btn">
                        <i class="bi bi-compass me-2"></i> Muğla'yı Keşfet
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="about-sidebar">
                @if (Model.ContactInfo != null)
                {
                    <div class="about-contact-card">
                        <h3>@Model.ContactInfo.Title</h3>
                        <ul class="contact-list">
                            <li>
                                <i class="bi bi-geo-alt"></i>
                                <span>@Model.ContactInfo.Address</span>
                            </li>
                            <li>
                                <i class="bi bi-telephone"></i>
                                <span>@Model.ContactInfo.Phone</span>
                            </li>
                            <li>
                                <i class="bi bi-envelope"></i>
                                <span>@Model.ContactInfo.Email</span>
                            </li>
                            <li>
                                <i class="bi bi-clock"></i>
                                <span>@Model.ContactInfo.Hours</span>
                            </li>
                        </ul>
                    </div>
                }

                @if (Model.Stats != null && Model.Stats.Items != null && Model.Stats.Items.Length > 0)
                {
                    <div class="about-stats-card mt-4">
                        <h3>@Model.Stats.Title</h3>
                        @if (Model.Stats.Items.Length > 0)
                        {
                            <div class="stat-item">
                                <div class="stat-number">@Model.Stats.Items[0].Number</div>
                                <div class="stat-label">@Model.Stats.Items[0].Label</div>
                            </div>
                        }
                        @if (Model.Stats.Items.Length > 1)
                        {
                            <div class="stat-item">
                                <div class="stat-number">@Model.Stats.Items[1].Number</div>
                                <div class="stat-label">@Model.Stats.Items[1].Label</div>
                            </div>
