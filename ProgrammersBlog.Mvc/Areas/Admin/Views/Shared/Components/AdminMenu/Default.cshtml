        <div class="sb-sidenav-menu">


            <div class="nav">
                <!-- Main Menu -->
                <div class="menu-section">
                    <p class="menu-heading">Ana Menü</p>
                </div>

                <a class="menu-item" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #2e7d32;">
                        <rect x="3" y="3" width="7" height="9" rx="1"></rect>
                        <rect x="14" y="3" width="7" height="5" rx="1"></rect>
                        <rect x="14" y="12" width="7" height="9" rx="1"></rect>
                        <rect x="3" y="16" width="7" height="5" rx="1"></rect>
                    </svg>
                    <span>Yönetim Paneli</span>
                </a>
                <a class="menu-item" asp-controller="Home" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #2e7d32;" viewBox="0 0 24 24">
                        <path d="M18 13v6a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                        <polyline points="15 3 21 3 21 9"></polyline>
                        <line x1="10" y1="14" x2="21" y2="3"></line>
                    </svg>
                    <span>Blog Sitesine Git</span>
                </a>


                <!-- Content Management -->
                <div class="menu-section">
                    <p class="menu-heading">İçerik Yönetimi</p>
                </div>

                <a class="menu-item" asp-area="Admin" asp-controller="Category" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #ef6c00;">
                        <line x1="8" y1="6" x2="21" y2="6"></line>
                        <line x1="8" y1="12" x2="21" y2="12"></line>
                        <line x1="8" y1="18" x2="21" y2="18"></line>
                        <line x1="3" y1="6" x2="3.01" y2="6"></line>
                        <line x1="3" y1="12" x2="3.01" y2="12"></line>
                        <line x1="3" y1="18" x2="3.01" y2="18"></line>
                    </svg>
                    <span>Kategoriler</span>
                </a>

                <a class="menu-item" asp-area="Admin" asp-controller="Menu" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #0277bd;">
                        <path d="M3 3h18v18H3zM9 3v18M3 9h18M3 15h18"></path>
                    </svg>
                    <span>Menüler</span>
                </a>

                <a class="menu-item" asp-area="Admin" asp-controller="Article" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #d81b60;">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                        <line x1="16" y1="13" x2="8" y2="13"></line>
                        <line x1="16" y1="17" x2="8" y2="17"></line>
                        <polyline points="10 9 9 9 8 9"></polyline>
                    </svg>
                    <span>Makaleler</span>
                </a>

                <a class="menu-item" asp-area="Admin" asp-controller="Comment" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #1565c0;">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                        <path d="M13 8H7"></path>
                        <path d="M17 8h-2"></path>
                        <path d="M13 12H7"></path>
                        <path d="M17 12h-2"></path>
                    </svg>
                    <span>Yorumlar</span>
                </a>



                @if (Model.Roles.Any(r => r.Equals("SuperAdmin") || r.Equals("Role.Read")))
                {
                    <!-- User Management -->
                    <div class="menu-section">
                        <p class="menu-heading">Kullanıcı Yönetimi</p>
                    </div>
                    <a class="menu-item" asp-area="Admin" asp-controller="Role" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #512da8;">
                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                        </svg>
                        <span>Roller</span>
                    </a>
                }

                @if (Model.Roles.Any(r => r.Equals("SuperAdmin") || r.Equals("User.Read")))
                {
                    <a class="menu-item" asp-area="Admin" asp-controller="User" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #ef6c00;">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                        <span>Kullanıcılar</span>
                    </a>
                }



                @if (Model.Roles.Any(r => r.Equals("SuperAdmin") && r.Equals("Log.Read")))
                {
                    <!-- Log Management -->
                    <div class="menu-section">
                        <p class="menu-heading">Log Yönetimi</p>
                    </div>
                    <a class="menu-item" asp-area="Admin" asp-controller="Log" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #0288d1;">
                            <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
                            <path d="M17 21H7a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h7l5 5v11a2 2 0 0 1-2 2z"></path>
                            <line x1="9" y1="9" x2="10" y2="9"></line>
                            <line x1="9" y1="13" x2="15" y2="13"></line>
                            <line x1="9" y1="17" x2="15" y2="17"></line>
                        </svg>
                        <span>Loglar</span>
                    </a>
                }

                <!-- Archive -->
                <div class="menu-section">
                    <p class="menu-heading">Arşiv</p>
                </div>

                <a class="menu-item has-dropdown" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #00796b;">
                        <path d="M21 8v13H3V8"></path>
                        <path d="M1 3h22v5H1z"></path>
                        <path d="M10 12h4"></path>
                    </svg>
                    <span>Arşiv</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-arrow">
                        <polyline points="6 9 12 15 18 9"></polyline>
                    </svg>
                </a>

                <div class="collapse submenu" id="collapseLayouts">
                    <a class="submenu-item" asp-area="Admin" asp-controller="Category" asp-action="DeletedCategories">
                        <span class="submenu-dot"></span>
                        <span>Silinen Kategoriler</span>
                    </a>

                    <a class="submenu-item" asp-area="Admin" asp-controller="Menu" asp-action="DeletedMenus">
                        <span class="submenu-dot"></span>
                        <span>Silinen Menüler</span>
                    </a>

                    <a class="submenu-item" asp-area="Admin" asp-controller="Article" asp-action="DeletedArticles">
                        <span class="submenu-dot"></span>
                        <span>Silinen Makaleler</span>
                    </a>

                    <a class="submenu-item" asp-area="Admin" asp-controller="Comment" asp-action="DeletedComments">
                        <span class="submenu-dot"></span>
                        <span>Silinen Yorumlar</span>
                    </a>
                </div>



                @if (Model.Roles.Any(r => r.Equals("SuperAdmin")))
                {
                    <!-- Main Menu -->
                    <div class="menu-section">
                        <p class="menu-heading">Ayarlar</p>
                    </div>
                    <a class="menu-item" asp-area="Admin" asp-controller="Options" asp-action="GeneralSettings">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #2e7d32;" viewBox="0 0 24 24">
                            <circle cx="12" cy="12" r="3"></circle>
                            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09a1.65 1.65 0 0 0-1-1.51 1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 1 1-2.83-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09a1.65 1.65 0 0 0 1.51-1 1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 1 1 2.83-2.83l.06.06a1.65 1.65 0 0 0 1.82.33h.09A1.65 1.65 0 0 0 10 3.09V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51h.09a1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 1 1 2.83 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82v.09A1.65 1.65 0 0 0 20.91 12H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                        </svg>
                        <span>Genel Ayarlar</span>
                    </a>

                    <a class="menu-item" asp-area="Admin" asp-controller="Options" asp-action="EmailSettings">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #2e7d32;" viewBox="0 0 24 24">
                            <path d="M4 4h16v16H4z" stroke="none" />
                            <polyline points="4 4 12 13 20 4"></polyline>
                        </svg>
                        <span>E-Posta Ayarları</span>
                    </a>
                    <a class="menu-item" asp-area="Admin" asp-controller="Options" asp-action="ArticleRightSideBarWidgetSettings">
                        <!-- Yeni ikon: Gear/Settings -->
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #2e7d32;" viewBox="0 0 24 24">
                            <circle cx="12" cy="12" r="3"></circle>
                            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09a1.65 1.65 0 0 0-1-1.51 1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 1 1-2.83-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1 0-4h.09a1.65 1.65 0 0 0 1.51-1 1.65 1.65 0 0 0-.33-1.82L4.2 6.34a2 2 0 1 1 2.83-2.83l.06.06a1.65 1.65 0 0 0 1.82.33h.06a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 4 0v.09a1.65 1.65 0 0 0 1 1.51h.06a1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 1 1 2.83 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82v.06a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 0 4h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                        </svg>
                        <span>Makale Sayfaları İçin Widget Ayarları</span>
                    </a>

                    <a class="menu-item" asp-area="Admin" asp-controller="Options" asp-action="About">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon" style="color: #2e7d32;" viewBox="0 0 24 24">
                            <path d="M21 15V5a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v10"></path>
                            <path d="M3 17h18"></path>
                            <path d="M7 21h10"></path>
                            <path d="M12 17v4"></path>
                        </svg>
                        <span>Hakkımızda Sayfa İçerikleri</span>
                    </a>
                }
            </div>

        </div>
        <!-- User Profile -->
        <div class="user-profile-container">
            <div class="user-profile">
                <div class="user-avatar-wrapper">
                    <img src="~/img/@Model.User.Picture"
                         alt="@Model.User.UserName"
                         class="user-avatar">
                    <span class="user-status" title="Çevrimiçi"></span>
                </div>
                <div class="user-info">
                    <h6 class="user-name">@Model.User.UserName</h6>
                    <div class="user-role">
                        <span class="role-badge">
                            Yönetici
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>
