<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title Admin Paneli | Programmers Blog</title>
    @await Html.PartialAsync("_LayoutCssPartial");
    @await RenderSectionAsync("Styles", false);
    <link href="~/AdminLTE/css/site.css" rel="stylesheet" />
</head>
<body class="sb-nav-fixed">
<nav class="sb-topnav">
    <div class="topnav-left">
        <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">
      @*       <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="#6a1b9a" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M2 17L12 22L22 17" stroke="#6a1b9a" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M2 12L12 17L22 12" stroke="#6a1b9a" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg> *@
            <span>Admin Paneli</span>
        </a>
        <button class="sidebar-toggle" id="sidebarToggle">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="3" y1="12" x2="21" y2="12"></line>
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
        </button>
    </div>
    
    <!-- Navbar Search-->
    <form class="search-form">
        <div class="search-container">
            <input class="search-input" type="text" placeholder="Arama..." aria-label="Search" />
            <button class="search-button" type="button">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
            </button>
        </div>
    </form>
    
    <!-- Navbar Menu -->
    <div class="topnav-right">
        @await Component.InvokeAsync("UserMenu")
    </div>
</nav>


    <div id="layoutSidenav">
        @await Component.InvokeAsync("AdminMenu")
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    @if(TempData["SuccessMessage"]!=null){
                        <div class="alert alert-success mt-2" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Tüm hakları saklıdır &copy; ProgrammersBlog</div>
                        <div>
                            <a href="#">Gizlilik Politikası</a>
                            &middot;
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    @await Html.PartialAsync("_LayoutJsPartial");
    @await RenderSectionAsync("Scripts", false);
</body>
</html>
