@model ProgrammersBlog.Entities.Dtos.Roles.RoleListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Roller";
}

<!-- Breadcrumb -->
<nav class="breadcrumb-container">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a class="text-decoration-none" asp-area="Admin" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door-fill"></i> Admin
            </a>
        </li>
        <li class="breadcrumb-item">
            <a class="text-decoration-none" asp-area="Admin" asp-controller="Role" asp-action="Index">
                <i class="bi bi-journal-text"></i> Roller
            </a>
        </li>
    </ol>
</nav>

<div id="modalPlaceHolder" aria-hidden="true"></div>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Roller
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="rolesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Rol Adı</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Rol Adı</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var role in Model.Roles)
                    {
                        <tr name="@role.Id">
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/AdminLTE/js/roleIndex.js" type="application/ecmascript"></script>
}
@section Styles
{
    <!-- Bootstrap Icons (CDN)  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Mugla/css/breadcrumb.css" rel="stylesheet" />
}
