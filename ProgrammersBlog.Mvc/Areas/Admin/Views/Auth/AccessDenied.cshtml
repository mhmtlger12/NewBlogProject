@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Unauthorized access error page" />
    <meta name="author" content="Your Website Name" />
    <title>403 || Erişiminiz Reddedildi</title>

    <link href="~/AdminLTE/css/styles.css" rel="stylesheet" />
    <link href="~/AdminLTE/css/httpErrorBgAnimation.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>

    <style>
        .btn:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }
        .btn .btn-hover-effect {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 300%;
            height: 300%;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            transition: all 0.6s ease;
            transform: translate(-50%, -50%) scale(0);
        }

        .btn:hover .btn-hover-effect {
            transform: translate(-50%, -50%) scale(1);
        }

    </style>
</head>
<body>
    <div class="wrapper">
        <div class="box">
        <div id="layoutError" class="d-flex flex-column min-vh-100">
            <div id="layoutError_content" class="flex-grow-1 d-flex align-items-center">
                <main class="w-100">
                  
                        <div class="row justify-content-center">
                            <div class="col-lg-6 col-md-8 col-sm-10 text-center">
         
                                    <h1 class="display-1 fw-bold text-gradient text-danger mb-3">403</h1>
                                    <br />
                          
                                <p class="lead text-dark mb-4" >
                                    Bu sayfadaki içeriklere erişim yetkiniz yoktur.
                                </p>

                                <h2 class="h4 text-uppercase text-muted mb-3" style="text-decoration:overline">Erişiminiz Reddedilmiştir 🔒</h2>
                                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                                    <a asp-area="Admin" asp-controller="Home" asp-action="Index"
                                       class="btn btn-lg px-4 gap-3"
                                       style="background: linear-gradient(to right, #ff7e5f, #feb47b); color: white; border: 2px solid transparent; border-radius: 50px; font-size: 1.2rem; transition: all 0.3s ease; position: relative; overflow: hidden;">
                                        <i class="fas fa-arrow-left me-2" style="font-size: 1.5rem;"></i>
                                        Dashboard'a Dön
                                        <span class="btn-hover-effect"></span>
                                    </a>
                                </div>
                            </div>
                    </div>
                </main>
            </div>
            <div id="layoutError_footer">
                <footer class="py-3 bg-light mt-auto">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Tüm Hakları Saklıdır &copy; ProgrammersBlog 2025</div>
                            <div class="text-muted">v2.1.0</div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>

        </div>
    </div>
    <!-- JS Libraries -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/AdminLTE/js/scripts.js"></script>
</body>
</html>
