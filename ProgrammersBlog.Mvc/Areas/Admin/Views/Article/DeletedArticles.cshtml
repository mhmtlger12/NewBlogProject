@model ProgrammersBlog.Entities.Dtos.Articles.ArticleListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Silinmiş Makaleler";
}

<!-- Breadcrumb -->
<nav class="breadcrumb-container">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a class="text-decoration-none" asp-area="Admin" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door-fill"></i> Admin
            </a>
        </li>
        <li class="breadcrumb-item active">
            <a class="text-decoration-none" asp-area="Admin" asp-controller="Article" asp-action="DeletedArticles">
                <i class="bi bi-journal-text"></i> Silinmiş Makaleler
            </a>
        </li>

    </ol>
</nav>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Silinmiş Makaleler
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="deletedArticlesTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Kategori</th>
                    <th>Başlık</th>
                    <th>Küçük Resim</th>
                    <th>Tarih</th>
                    <th>Okunma Sayısı</th>
                    <th>Yorum Sayısı</th>
                    <th>Aktif Mi?</th>
                    <th>Silinmiş Mi?</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Oluşturan Kullanıcı Adı</th>
                    <th>Son Düzenlenme Tarihi</th>
                    <th>Son Düzenleyen Kullanıcı Adı</th>
                    <th>İşlemler</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>#</th>
                    <th>Kategori</th>
                    <th>Başlık</th>
                    <th>Küçük Resim</th>
                    <th>Tarih</th>
                    <th>Okunma Sayısı</th>
                    <th>Yorum Sayısı</th>
                    <th>Aktif Mi?</th>
                    <th>Silinmiş Mi?</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Oluşturan Kullanıcı Adı</th>
                    <th>Son Düzenlenme Tarihi</th>
                    <th>Son Düzenleyen Kullanıcı Adı</th>
                    <th>İşlemler</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var article in Model.Articles)
                {
                    <tr name="@article.Id">
                        <td>@article.Id</td>
                        <td>@article.Menu.Name</td>
                        <td>@article.Title</td>
                        <td><img src="~/img/@article.Thumbnail" class="my-image-table" /></td>
                        <td>@article.Date.ToShortDateString()</td>
                        <td>@article.ViewsCount</td>
                        <td>@article.CommentCount</td>
                        <td>@(article.IsActive ? "Evet" : "Hayır")</td>
                        <td>@(article.IsDeleted ? "Evet" : "Hayır")</td>
                        <td>@article.CreatedDate.ToShortDateString()</td>
                        <td>@article.CreatedByName</td>
                        <td>@article.ModifiedDate.ToShortDateString()</td>
                        <td>@article.ModifiedByName</td>
                        <td>
                            <a class="btn btn-warning btn-sm btn-undo" data-id="@article.Id"><span class="fas fa-undo"></span></a>
                            <button class="btn btn-danger btn-sm btn-delete" data-id="@article.Id"><span class="fas fa-minus-circle"></span></button>
                        </td>
                    </tr>
                }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/AdminLTE/js/deletedArticles.js" type="application/ecmascript"></script>
}
@section Styles
{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Mugla/css/breadcrumb.css" rel="stylesheet" />
}